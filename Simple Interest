#include <stdio.h>
main()
{
    float amount,rate,time,si;
 
    printf("Enter principal amount :");
    scanf("%f",&amount);
 
    printf("Enter rate :");
    scanf("%f",&rate);
 
    printf("Enter time :");
    scanf("%f",&time);
 
    si=[(amount*rate*time)/100];
 
    printf("Simple Interest is = %f",si);
 
    return 0;

}
